<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#00bfa5"
    android:weightSum="4"
    android:layout_height="match_parent">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:background="@drawable/profile"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hridoy_chandra_das"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="#fff" />


        <TableRow
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:background="#fff">

        </TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/software_engineer"
            android:textColor="#fff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:padding="15dp"
            android:textAlignment="center"
            android:textSize="12sp"
            android:text="@string/my_string"
            android:textColor="#fff"/>



    </LinearLayout>








    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/msg"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="Send Message"
            android:background="@drawable/folow_round"
            android:textColor="#fff"/>

        <Button
            android:id="@+id/fb"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="Facebook Profile"
            android:background="@drawable/pro_round"
            android:textColor="#fff"
            android:layout_marginTop="30dp"/>


    </LinearLayout>








</LinearLayout><!--Top Content-->


